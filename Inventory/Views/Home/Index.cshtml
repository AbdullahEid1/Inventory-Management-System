@{
    ViewData["Title"] = "Home Page";
}

@model HomeViewModel

<div class="container-fluid">
    <div class="row">
        
        


        <!-- Main content -->
        <div class="mb-2 col-md-8 main-content">
            <!-- Top Bar -->
            <div class="card shadow-lg mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Get Product</h5>
                </div>

                <div class="card-body">
                    <form>
                        
                    </form>

                </div>



            </div>
            @if (Model.LowStockProducts.Any(product => product.StockQuantity < product.LowStockThreshold))
            {
                <div class="alert alert-warning">
                    <strong>Low Stock Alert!</strong> Some products are below their stock threshold. Please review the product list.
                </div>
            }
            <!-- Recent Orders Table -->
            <div class="card shadow-lg border-0">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Low Stock Products</h5>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead class="table-success">
                            <tr>
                                <th>Product</th>
                                <th>Category</th>
                                <th>Supplier</th>
                                <th>Price</th>
                                <th>Stock</th>
                                @if(User.Identity.IsAuthenticated)
                                {
                                    <th>Add Quantity</th>
                                }
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var product in Model.LowStockProducts)
                            {
                                <tr>
                                    <td>@product.ProductName</td>
                                    <td>@product.Category.CategoryName</td>
                                    <td>@product.Supplier.SupplierName</td>
                                    <td>@product.Price</td>
                                    <td>@product.StockQuantity</td>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <td>
                                            <form asp-action="AddQuantity" asp-controller="Product" asp-route-id="@product.ProductID">
                                                <div class="input-group">
                                                    <!-- Input for Quantity -->
                                                    <input name="Quantity" type="number" value="1" class="form-control" aria-label="Quantity" min="1" />

                                                    <!-- Button for Adding Quantity -->
                                                    <button type="submit" asp-action="AddQuantity" asp-controller="Product" asp-route-id="@product.ProductID" class="px-2 btn btn-outline-success btn-sm">
                                                        <i class="fas fa-plus">+</i>
                                                    </button>
                                                </div>
                                            </form>
                                        </td>

                                    }
                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-outline-danger btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                                Actions
                                            </button>
                                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                <li>
                                                    <a class="dropdown-item" asp-action="Details" asp-controller="Product" asp-route-id="@product.ProductID">
                                                        <i class="fas fa-info-circle"></i> Details
                                                    </a>
                                                </li>
                                               
                                                @if (User.IsInRole("Admin"))
                                                {
                                                    <li>
                                                        <a class="dropdown-item" asp-action="Edit" asp-controller="Product" asp-route-id="@product.ProductID">
                                                            <i class="fas fa-edit"></i> Edit
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item" asp-action="Delete" asp-controller="Product" asp-route-id="@product.ProductID">
                                                            <i class="fas fa-trash-alt"></i> Delete
                                                        </a>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                            
                            
                            <!-- More rows as needed -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Sidebar Stats -->
        <aside class="col-md-2 flex flex-row">

            <div class="row">
                <div class="card mb-3 shadow-lg card-stat">
                    <div class="card-body text-center">
                        <h5 class="card-title">Total Users</h5>
                        <h2>@Model.TotalUsers</h2>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="ShowAllUsers" class="btn btn-outline-dark">Show  Users</a>

                        }
                    </div>
                </div>

                <div class="card mb-3 shadow-lg card-stat">
                    <div class="card-body text-center">
                        <h5 class="card-title">Total Categories</h5>
                        <h2>@Model.TotalCategories</h2>
                        <a asp-action="Index" asp-controller="Category" class="btn btn-outline-danger">Show  Categories</a>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="card mb-3 shadow-lg card-stat">
                    <div class="card-body text-center">
                        <h5 class="card-title">Total Products</h5>
                        <h2>@Model.TotalProducts</h2>
                        <a asp-action="Index" asp-controller="Product" class="btn btn-outline-success">Show  Products</a>
                    </div>
                </div>
                <div class="card mb-3 shadow-lg card-stat">
                    <div class="card-body text-center">
                        <h5 class="card-title">Total Suppliers</h5>
                        <h2>@Model.TotalSupplires</h2>
                        <a asp-action="Index" asp-controller="Supplier" class="btn btn-outline-secondary">Show  Suppliers</a>
                    </div>
                </div>
            </div>
            
        </aside>
    </div>
</div>

