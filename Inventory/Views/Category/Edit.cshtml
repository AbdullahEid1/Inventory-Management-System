@model Inventory.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7 col-sm-9">
            <div class="card border-0 shadow-lg">
                <div class="card-header text-center text-white" style="background: linear-gradient(to right, #4e54c8, #8b6cb0);">
                    <h3 class="mb-0">Edit Category</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div class="form-group mb-4">
                            <label asp-for="CategoryName" class="form-label">Category Name</label>
                            <input asp-for="CategoryName" class="form-control" placeholder="Enter category name" required />
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-outline-success">Save Changes</button>
                            <a asp-action="Index" class="btn btn-outline-danger">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

