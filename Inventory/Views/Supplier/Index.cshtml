@model IEnumerable<Inventory.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers List";
}

<h2>Suppliers List</h2>

<!-- Search Form -->
<form asp-action="Index" method="get" class="form-inline mb-3">
    <input type="text" name="searchString" value="@ViewData["SearchString"]" class="form-control mr-2" placeholder="Search Suppliers" />
    <button type="submit" class="btn btn-primary mt-3">Search</button>
</form>

<a class="btn btn-success mb-3" asp-action="Create">
    <i class="fas fa-plus"></i> Create New Supplier
</a>

@if (!Model.Any())
{
    <div class="alert alert-warning text-center">
        No suppliers available.
    </div>
}
else
{
    <table class="table table-striped table-hover table-bordered mt-3">
        <thead class="thead-dark">
            <tr>
                <th>Supplier Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var supplier in Model)
            {
                <tr>
                    <td>@supplier.SupplierName</td>
                    <td>@supplier.Phone</td>
                    <td>@supplier.Email</td>
                    <td>@supplier.Address</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@supplier.SupplierID">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@supplier.SupplierID">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                        <a class="btn btn-danger btn-sm" asp-action="PrintProducts" asp-route-id="@supplier.SupplierID">
                            <i class="fas fa-trash-alt"></i> Show Products
                        </a>
                    </td>
                </tr>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }
        </tbody>
    </table>
}
